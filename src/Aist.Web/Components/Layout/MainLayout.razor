@inherits LayoutComponentBase

<div class="min-h-screen bg-gray-50 flex flex-col md:flex-row">
    <!-- Desktop Sidebar -->
    <aside class="hidden md:flex md:w-64 md:flex-col md:fixed md:inset-y-0 bg-indigo-700">
        <div class="flex flex-col flex-grow pt-5 pb-4 overflow-y-auto">
            <div class="flex items-center flex-shrink-0 px-4">
                <span class="text-white text-2xl font-bold tracking-wider">Aist</span>
            </div>
            <div class="mt-8 flex-1 flex flex-col">
                <NavMenu />
            </div>
        </div>
    </aside>

    <!-- Mobile Top Bar -->
    <header class="md:hidden bg-indigo-700 text-white px-4 py-3 flex justify-between items-center sticky top-0 z-10 shadow-md">
        <span class="text-xl font-bold tracking-wider">Aist</span>
        <div class="h-8 w-8 rounded-full bg-indigo-500 flex items-center justify-center">
            <span class="text-xs">User</span>
        </div>
    </header>

    <!-- Main Content Area -->
    <main class="flex-1 md:ml-64 pb-20 md:pb-0">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            @Body
        </div>
    </main>

    <!-- Mobile Bottom Navigation -->
    <nav class="md:hidden fixed bottom-0 inset-x-0 bg-white border-t border-gray-200 flex justify-around py-3 z-10 shadow-lg">
        <NavLink href="" Match="NavLinkMatch.All" class="flex flex-col items-center text-gray-500 hover:text-indigo-600 transition-colors" ActiveClass="text-indigo-600 font-semibold">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span class="text-[10px] mt-1">Home</span>
        </NavLink>
        <NavLink href="projects" class="flex flex-col items-center text-gray-500 hover:text-indigo-600 transition-colors" ActiveClass="text-indigo-600 font-semibold">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            <span class="text-[10px] mt-1">Projects</span>
        </NavLink>
        <NavLink href="jobs" class="flex flex-col items-center text-gray-500 hover:text-indigo-600 transition-colors" ActiveClass="text-indigo-600 font-semibold">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
            <span class="text-[10px] mt-1">Jobs</span>
        </NavLink>
    </nav>
</div>

<div id="blazor-error-ui" class="fixed bottom-0 inset-x-0 bg-yellow-100 p-4 text-center z-50" style="display: none;">
    An unhandled error has occurred.
    <a href="." class="underline font-bold">Reload</a>
    <span class="ml-4 dismiss cursor-pointer">ðŸ—™</span>
</div>

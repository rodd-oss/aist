@using Aist.Web.Services
@using Aist.Core
@inject AistApiService Api

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 h-full">
    @foreach (var status in Enum.GetValues<JobStatus>())
    {
        <div class="bg-gray-100 rounded-lg p-4 flex flex-col min-h-[500px]">
            <h3 class="text-sm font-bold text-gray-700 uppercase tracking-wider mb-4 flex justify-between items-center">
                @status
                <span class="bg-white text-gray-500 px-2 py-0.5 rounded-full text-xs shadow-sm">
                    @(Jobs?.Count(j => j.Status == status) ?? 0)
                </span>
            </h3>

            <div class="flex-1 space-y-4">
                @foreach (var job in Jobs?.Where(j => j.Status == status) ?? Enumerable.Empty<JobResponse>())
                {
                    <div class="bg-white p-4 rounded-lg shadow-sm border-l-4 @GetJobTypeClass(job.Type) hover:shadow-md transition-shadow cursor-pointer"
                         @onclick="() => OnJobClick.InvokeAsync(job)">
                        <div class="flex justify-between items-start mb-2">
                            <span class="text-[10px] font-mono text-gray-400 bg-gray-50 px-1.5 py-0.5 rounded">@job.ShortSlug</span>
                        </div>
                        <h4 class="text-sm font-bold text-gray-900 mb-1">@job.Title</h4>
                        <p class="text-xs text-gray-500 line-clamp-2 mb-3">@job.Description</p>
                        
                        <div class="flex justify-between items-center pt-2 border-t border-gray-50">
                            <span class="text-[10px] text-gray-400">@job.CreatedAt.ToShortDateString()</span>
                            <div class="flex -space-x-1">
                                @if (job.UserStories?.Any() == true)
                                {
                                    <div class="w-5 h-5 rounded-full bg-indigo-100 flex items-center justify-center border border-white" title="Stories">
                                        <span class="text-[8px] font-bold text-indigo-600">@job.UserStories.Count</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public List<JobResponse>? Jobs { get; set; }
    [Parameter] public EventCallback<JobResponse> OnJobClick { get; set; }

    private string GetJobTypeClass(JobType type) => type switch
    {
        JobType.Feature => "border-blue-500",
        JobType.Fix => "border-red-500",
        JobType.Refactor => "border-purple-500",
        JobType.Doc => "border-green-500",
        _ => "border-gray-400"
    };
}
